{
  "name": "tmpg",
  "version": "1.0.0",
  "description": "Boilerplate for Typescript + GraphQL + Apollo + MikroORM + PostgreSQL Backends",
  "main": "index.js",
  "scripts": {
    "watch": "tsc -w",
    "dev": "nodemon dist/index.js",
    "start": "node dist/index.js",
    "create:migration": "mikro-orm migration:create",
    "clean": "rm -rf dist/",
    "clean:full": "rm -rf dist/ node_modules/ && yarn"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.12",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@mikro-orm/core": "^4.3.3",
    "@mikro-orm/migrations": "^4.3.3",
    "@mikro-orm/postgresql": "^4.3.3",
    "apollo-server-express": "^2.19.0",
    "argon2": "^0.27.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
